<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/navigation_home">

    <keep_state_fragment
        android:id="@+id/navigation_home"
        android:name="com.kenshi.showhidenavigation.ui.HomeFragment"
        android:label="TodayFragment"
        tools:layout="@layout/fragment_home"/>

    <keep_state_fragment
        android:id="@+id/navigation_register"
        android:name="com.kenshi.showhidenavigation.ui.RegisterFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_register"/>

    <keep_state_fragment
        android:id="@+id/navigation_manage"
        android:name="com.kenshi.showhidenavigation.ui.HomeContainerFragment"
        android:label="ManageFragment"
        tools:layout="@layout/fragment_manage"/>

</navigation>