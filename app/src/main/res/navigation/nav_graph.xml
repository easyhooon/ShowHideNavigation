<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_home"
    android:id="@+id/nav_graph">

    <keep_state_fragment
        android:id="@+id/navigation_register"
        android:name="com.kenshi.showhidenavigation.ui.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register"/>

    <keep_state_fragment
        android:id="@+id/navigation_home"
        android:name="com.kenshi.showhidenavigation.ui.home.HomeContainerFragment"
        android:label="HomeContainerFragment"
        tools:layout="@layout/fragment_home_container">
    </keep_state_fragment>

    <keep_state_fragment
        android:id="@+id/navigation_manage"
        android:name="com.kenshi.showhidenavigation.ui.manage.ManageFragment"
        android:label="ManageFragment"
        tools:layout="@layout/fragment_manage">
    </keep_state_fragment>

</navigation>